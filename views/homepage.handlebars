<div class="page-heading">
    <h1>The Tech Blog</h1>
</div>
<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        {{!-- {{>post-info post}} --}}
        <article class="post">
            <div class="title">
                <h2>{{title}}</h2>
                <h4>Posted by {{user.username}} on {{format_date created_at}}</h4>
            </div>
            <p>{{content}}</p>
        </article>
    </li>
    {{/each}}
</ul>