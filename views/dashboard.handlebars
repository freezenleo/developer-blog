<section>
    <div class="page-heading">
        <h1>Your Dashboard</h1>
    </div>

    {{#if posts.length}}
    <div>
        <h3>Your Posts</h3>
        <ul class="post-list">
            {{#each posts as |post|}}
            <li><a href="/dashboard/edit-post/{{post.id}}" class="edit-link">
                    < {{!-- {{> post-info post}} --}}
                        <article class="post">
                            <div class="title">
                                <h2>{{title}}</h2>
                                <span>{{format_date created_at}}</span>
                            </div>
                        </article>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    <button type="click" class="btn"><a href="/dashboard/create-post">+ New Post</a></button>
</section>